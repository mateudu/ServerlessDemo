@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <form method="post" enctype="multipart/form-data" asp-controller="Images" asp-action="Upload">
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input type="file" name="file"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
</div>